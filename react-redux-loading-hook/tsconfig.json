{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": ".build/tsc",
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": true,
    "outDir": ".build/tsc",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES5",
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
